<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">

 <ImageView
        android:id="@+id/Logo"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/mainlogo1"
        />
    <Button
        android:id="@+id/Button1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="250dp"
        android:text="Login"
        android:textColor="#FBFBF9"
        app:backgroundTint="#221F02"
        app:cornerRadius="10dp"
        app:strokeColor="#362904"
        app:strokeWidth="1dp"
        android:alpha="0.70"/>
<RadioButton
    android:id="@+id/RadioButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Button1"
    android:layout_centerInParent="true"
    android:text="Keep Me Logged In"
    />
    <TextView
        android:id="@+id/newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button1"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:autoLink="email"
        android:text="New User? Sign Up Now!"
        android:textColor="@color/black"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/newuser"
        android:layout_marginTop="4dp"
        android:text="OR"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/or"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Login Using"
        android:textColor="@color/black"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/Logo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:alpha="0.50"
        app:cardBackgroundColor="#D6CB6F"
        app:cardCornerRadius="20dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/EmailLogo"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/e2" />
            <ImageView
                android:id="@+id/PasswordLogo"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@+id/EmailLogo"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/password" />
            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:gravity="center_horizontal"
                android:hint="Email" />
            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/Email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:gravity="center_horizontal"
                android:hint="Password"

                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/google"
    android:layout_below="@id/newuser"
    android:layout_marginTop="70dp"
    android:layout_marginStart="120dp"
    />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/insta"
        android:layout_below="@id/newuser"
        android:layout_marginTop="70dp"
        android:layout_marginStart="190dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/spotify"
        android:layout_below="@id/newuser"
        android:layout_marginTop="70dp"
        android:layout_marginStart="260dp"
        />


</RelativeLayout>